<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
    <title>NYAMKA</title>
</head>

<body>
    <header>
        <a class="header-logo" href="/">LIST</a>
    </header>
    <div class="container">
        <div class="container-header">
            <h1>Daily Food List</h1>
            <a href="/new" class="new-button">+Add item</a>
        </div>
        <div class="index-table-wrapper">
            <div class="table-head">
                <span class="id-column">ID</span>
                <span class="name-column">Item</span>
                <span class="price-column">Price</span>
            </div>
            <ul class="table-body">
                <% items.forEach((item)=> { %>
                    <li>
                        <div class="item-data">
                            <span class="id-column">
                                <%= item.id %>
                            </span>
                            <span class="name-column">
                                <%= item.items %>
                            </span>
                            <span class="price-column">
                                <%= item.price %>
                            </span>
                        </div>
                        <div class="item-menu">
                            <form action="/delete/<%= item.id %>" method="post">
                              <input type="submit" value="Delete">
                            </form>
                          </div>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
</body>

</html>